<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ProgressIndicator?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhtw.demo.HelloController">
  <padding>
    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
  </padding>
  <Label text="Please enter a customer ID"/>
  <TextField fx:id="customerIdField" promptText="Enter Customer ID"/>
  <ProgressIndicator fx:id="progressIndicator" visible="false" />
  <Button text="Generate Invoice" onAction="#generateInvoice"/>
  <Label fx:id="statusLabel"/>
</VBox>
